# Environment Configuration
# Copy this file to .env and update values as needed

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=transactions
KAFKA_PARTITIONS=3

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fraud_detection
POSTGRES_USER=fraud_admin
POSTGRES_PASSWORD=fraud_secure_pass

# Spark Configuration
SPARK_MASTER=spark://spark-master:7077
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g

# Airflow Configuration
AIRFLOW_WEB_PORT=8081
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin

# Data Paths
DATA_BASE_PATH=/opt/data
REPORTS_PATH=/opt/airflow/reports

# Producer Configuration
DEFAULT_NUM_TRANSACTIONS=500
DEFAULT_FRAUD_RATIO=0.15
DEFAULT_TRANSACTION_DELAY=0.5
